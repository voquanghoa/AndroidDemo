<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.quanghoa.appdemo.customui.CircleChart
        android:id="@+id/circleChart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        app:progress="44"
        app:progressWidth="30"
        app:textSize="70sp"
        app:textColor="#0B58B4"
        app:progressColor="#EC5151"
        app:backColor="#AAD5D5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Increase"
        app:layout_constraintStart_toEndOf="@+id/circleChart"
        app:layout_constraintTop_toTopOf="@+id/circleChart" />

    <Button
        android:id="@+id/bt_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Decrease"
        app:layout_constraintBottom_toBottomOf="@+id/circleChart"
        app:layout_constraintStart_toEndOf="@+id/circleChart" />

</androidx.constraintlayout.widget.ConstraintLayout>